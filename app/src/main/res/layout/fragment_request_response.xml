<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestResponseFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/request_accepted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your request has been accepted"
                android:padding="50dp"
                android:textSize="40dp"
                android:textColor="@color/color_success"
                android:textAlignment="center"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_done_24"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You can go, taking care and respect the rights of others."
                android:padding="20dp"
                android:textSize="30dp"
                android:textAlignment="center"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/request_not_accepted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your request has not been accepted at this time"
                android:padding="40dp"
                android:textSize="40dp"
                android:textColor="@color/color_err"
                android:textAlignment="center"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_error_outline_24"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="But, you can review the recommendations of the centralized system."
                android:padding="20dp"
                android:textSize="30dp"
                android:textAlignment="center"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="see recommendations"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>